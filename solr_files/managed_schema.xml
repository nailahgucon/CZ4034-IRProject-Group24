<!-- To be added after data is added -->
    <fieldType name="text_suggest" class="solr.TextField" positionIncrementGap="100">
        <analyzer>
            <tokenizer name="standard"/>
            <filter name="lowercase"/>
        </analyzer>
    </fieldType>
    <field name="spellCheck" type="text_general" indexed="true" stored="true"/>
    <dynamicField name="*_txtsug" type="text_suggest" indexed="true" stored="true"/>
    <!-- Can add more fields to spellCheck and autocomplete-->
    <copyField source=NAME_OF_COLUMN_TO_SPELLCHECK dest="spellCheck" maxChars="256"/>
    <copyField source=NAME_OF_COLUMN_TO_AUTOCOMPLETE dest="autocomplete__txtsug" maxChars="256"/>
